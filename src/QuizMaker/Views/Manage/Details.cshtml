@model QuizViewModel

@{
    ViewData["Title"] = "Details";
    ViewData["EnableManagementLink"] = true;
}

<div>
    <h4>Quiz details</h4>
    <hr />

    <h3>@Model.Title</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Question</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var question in Model.Questions)
            {
            <tr>
                <td>@question.Title</td>
                <td>
                    <ul>
                        @foreach (var option in question.Options)
                        {
                            <li>@option.OptionText</li>
                        }
                    </ul>
                </td>
            </tr>
            }
        </tbody>
    </table>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Json)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Json)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Activate", "Activate", new { id = Model.ID }) |
    @Html.ActionLink("Results", "Results", new { id = Model.ID }) |
    <a asp-action="Index">Back to List</a>
</div>
